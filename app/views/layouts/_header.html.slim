header.navbar.fixed-top.navbar-inverse.bg-primary.py-0
  .container-fluid
    h1.text-white#logo = link_to "みやログ", root_path, class: "nav-link text-white"
    nav
      ul.nav.navbar-nav.navbar-right.flex-sm-row.my-2
        li.nav-item.ml-3 = link_to "このサイトについて", about_path, class: "text-white"
        /li.nav-item.ml-3 = link_to "問い合わせ(未実装)", "#", class: "text-white"
        li.nav-item.ml-3.dropdown
          = link_to "#", 'data-toggle'=>"dropdown", class: "dropdown-toggle text-white"
            | アカウントサービス
          ul.dropdown-menu.bg-info.border-white.position-absolute#dropdown
            - if logged_in?
              li.dropdown-items.mx-1 = link_to "プロフィール", user_path(current_user), class: "text-white"
              li.dropdown-items.mx-1 = link_to "新規投稿", new_post_path, class: "text-white"
              li.dropdown-items.mx-1 = link_to "お気に入り投稿リスト", favorites_path, class: "text-white"
              li.dropdown-items.mx-1 = link_to "ログアウト", logout_path, method: :delete, class: "text-white"
            - else
              li.dropdown-items.mx-1 = link_to "アカウント作成", new_user_path, class: "text-white"
              li.dropdown-items.mx-1 = link_to "ログイン", login_path, class: "text-white"
